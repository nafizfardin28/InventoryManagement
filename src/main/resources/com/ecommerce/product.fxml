<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ecommerce.controller.ProductController"
           style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #ffffff);">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">

        <!-- Card Container -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="ðŸ›’ Product List"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Table -->
            <TableView fx:id="productTable" prefHeight="280" prefWidth="720"
                       style="-fx-background-radius: 12;
                              -fx-border-radius: 12;
                              -fx-border-color: #d0d7de;
                              -fx-focus-color: transparent;
                              -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" text="Name" />
                    <TableColumn fx:id="priceColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Price" />
                    <TableColumn fx:id="availableColumn" prefWidth="200" style="-fx-alignment: CENTER;" text="Available Pieces" />
                    <TableColumn fx:id="actionColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Update Stock" />
                </columns>
            </TableView>

            <!-- Back Button -->
            <Button onAction="#handleBack" text="ðŸ”™ Back to Control Panel"
                    style="-fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-padding: 10 25;
                           -fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                           -fx-text-fill: white;
                           -fx-background-radius: 10;
                           -fx-cursor: hand;" />
        </VBox>
    </VBox>
</StackPane>
