<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ecommerce.controller.CartController"
           style="-fx-background-color: linear-gradient(to bottom, #e8f0f7, #ffffff);">

    <VBox spacing="20" alignment="CENTER">

        <!-- Card Container -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="ðŸ›’ Order History"
                   style="-fx-font-size: 26px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Table -->
            <TableView fx:id="orderTable" prefHeight="320" prefWidth="720"
                       style="-fx-background-radius: 12;
                              -fx-border-color: #d0d7de;
                              -fx-border-radius: 12;
                              -fx-padding: 5;
                              -fx-table-cell-border-color: transparent;
                              -fx-focus-color: transparent;">
                <columns>
                    <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="90"/>
                    <TableColumn fx:id="productNameColumn" text="Product" prefWidth="150"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="90"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="90"/>
                    <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="110"/>
                    <TableColumn fx:id="removeColumn" text="Remove" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Total -->
            <Label fx:id="totalLabel" text="Total: $"
                   style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #34495e;" />

            <!-- Back Button -->
            <Button text="â¬… Back to Products"
                    onAction="#handleBack"
                    style="-fx-background-color: linear-gradient(to right, #2196f3, #1976d2);
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-padding: 10 25;
                           -fx-cursor: hand;" />

        </VBox>
    </VBox>
</StackPane>
