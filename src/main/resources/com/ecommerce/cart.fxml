<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecommerce.controller.CartController"
      style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f2f2f2); -fx-padding: 30;">

    <Label text="ðŸ›’ Order History"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TableView fx:id="orderTable" prefHeight="300" prefWidth="700"
               style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10;">
        <columns>
            <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="90"/>
            <TableColumn fx:id="productNameColumn" text="Product" prefWidth="140"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80">

            </TableColumn>
            <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="100"/>
            <TableColumn fx:id="removeColumn" text="Remove" prefWidth="100"/>
        </columns>
    </TableView>

    <Label fx:id="totalLabel" text="Total: $" style="-fx-font-size: 16px; -fx-text-fill: #333;" />

    <Button text="Back to Products"
            onAction="#handleBack"
            style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 16;" />

</VBox>
