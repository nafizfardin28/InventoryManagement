<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ecommerce.controller.CustomerListController"
           style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);">

    <VBox spacing="20" alignment="CENTER">

        <!-- Card Container -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="ðŸ“‹ Customer Details"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Table -->
            <TableView fx:id="customerTable" prefWidth="650" prefHeight="350"
                       style="-fx-background-radius: 12;
                              -fx-border-color: #d0d7de;
                              -fx-border-radius: 12;
                              -fx-table-cell-border-color: transparent;
                              -fx-focus-color: transparent;
                              -fx-padding: 5;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="120"
                                 style="-fx-alignment: CENTER-LEFT;" />
                    <TableColumn fx:id="nameColumn" text="Username" prefWidth="280"
                                 style="-fx-alignment: CENTER-LEFT;" />
                    <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="250"
                                 style="-fx-alignment: CENTER-LEFT;" />
                </columns>
            </TableView>

            <!-- Back Button -->
            <Button text="â¬… Back"
                    onAction="#handleBack"
                    style="-fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-padding: 10 30;
                           -fx-background-color: linear-gradient(to right, #3498db, #2980b9);
                           -fx-text-fill: white;
                           -fx-background-radius: 12;
                           -fx-cursor: hand;" />
        </VBox>
    </VBox>
</StackPane>
