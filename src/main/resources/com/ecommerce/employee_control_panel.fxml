<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecommerce.controller.ControlPanelController">

    <Label text="Control Panel" textAlignment="CENTER">
        <font>
            <Font name="Ubuntu Mono Bold" size="20.0" />
        </font>
    </Label>

    <Button fx:id="viewProductsButton"
            onAction="#handleViewProducts"
            text="🛍 View Products"
            prefWidth="200"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <Button fx:id="viewCustomersButton"
            onAction="#handleViewCustomers"
            text="👤 View Customers"
            prefWidth="200"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />

    <Button fx:id="viewOrdersButton"
            onAction="#handleViewOrders"
            text="📦 View Orders"
            prefWidth="200"
            style="-fx-background-color: #FF9800; -fx-text-fill: white;" />



    <Button fx:id="backButton"
            onAction="#handleBack"
            text="🔙 Back"
            prefWidth="200"
            style="-fx-background-color: #f44336; -fx-text-fill: white;" />
</VBox>
