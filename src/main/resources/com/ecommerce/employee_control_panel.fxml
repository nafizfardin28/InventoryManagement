<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ecommerce.controller.ControlPanelController"
           style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #ffffff);">

    <VBox alignment="CENTER" spacing="20">

        <!-- Card Container -->
        <VBox alignment="CENTER" spacing="18"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 40 50;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="Control Panel" textAlignment="CENTER">
                <font>
                    <Font name="Segoe UI Semibold" size="22.0" />
                </font>
                <style>
                    -fx-text-fill: #2c3e50;
                </style>
            </Label>

            <!-- Buttons -->
            <Button fx:id="viewProductsButton"
                    onAction="#handleViewProducts"
                    text="🛍 View Products"
                    prefWidth="220"
                    style="-fx-background-color: linear-gradient(to right, #4CAF50, #43a047);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 10;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;" />

            <Button fx:id="viewCustomersButton"
                    onAction="#handleViewCustomers"
                    text="👤 View Customers"
                    prefWidth="220"
                    style="-fx-background-color: linear-gradient(to right, #2196F3, #1976D2);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 10;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;" />

            <Button fx:id="viewOrdersButton"
                    onAction="#handleViewOrders"
                    text="📦 View Orders"
                    prefWidth="220"
                    style="-fx-background-color: linear-gradient(to right, #FF9800, #f57c00);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 10;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;" />

            <Button fx:id="backButton"
                    onAction="#handleBack"
                    text="🔙 Back"
                    prefWidth="220"
                    style="-fx-background-color: linear-gradient(to right, #f44336, #c62828);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-background-radius: 10;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;" />
        </VBox>
    </VBox>
</StackPane>
