<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ecommerce.controller.ProductListController"
           style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #ffffff);">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">

        <!-- Card Container -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="🛒 Product List"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Products Table -->
            <TableView fx:id="productTable" prefHeight="250" prefWidth="720"
                       style="-fx-background-radius: 12;
                              -fx-border-radius: 12;
                              -fx-border-color: #d0d7de;
                              -fx-table-cell-border-color: transparent;
                              -fx-focus-color: transparent;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="100" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" />
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="150" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="availableColumn" text="Available Pieces" prefWidth="200" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>

            <!-- Input Fields -->
            <VBox spacing="12" alignment="CENTER">
                <TextField fx:id="CustomerName" promptText="Enter Customer Name"
                           style="-fx-pref-width: 320; -fx-background-radius: 8px; -fx-padding: 8;" />
                <TextField fx:id="PhoneNumber" promptText="Enter Phone Number"
                           style="-fx-pref-width: 320; -fx-background-radius: 8px; -fx-padding: 8;" />
                <TextField fx:id="productIdField" promptText="Enter Product ID"
                           style="-fx-pref-width: 320; -fx-background-radius: 8px; -fx-padding: 8;" />
                <TextField fx:id="quantityField" promptText="Enter Quantity"
                           style="-fx-pref-width: 320; -fx-background-radius: 8px; -fx-padding: 8;" />
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="cartButton" onAction="#handleViewCart" text="🛍 View Cart"
                        style="-fx-font-size: 14px;
                               -fx-padding: 10 20;
                               -fx-background-color: linear-gradient(to right, #f0ad4e, #ec9a21);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
                <Button onAction="#handleOrder" text="➕ Add to Cart"
                        style="-fx-font-size: 14px;
                               -fx-padding: 10 20;
                               -fx-background-color: linear-gradient(to right, #28a745, #218838);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
                <Button onAction="#handleSaveDraft" text="Save as Draft"
                        style="-fx-font-size: 14px;
                               -fx-padding: 10 20;
                               -fx-background-color: linear-gradient(to right, #ff8307, #e67300);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
            </HBox>

            <!-- Drafts Section -->
            <VBox fx:id="draftsPane" visible="false" spacing="12" VBox.vgrow="ALWAYS">
                <Label text="📄 Draft Sales"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TableView fx:id="draftTable" prefHeight="400" prefWidth="720"
                           style="-fx-background-radius: 12;
                                  -fx-border-radius: 12;
                                  -fx-border-color: #d0d7de;
                                  -fx-table-cell-border-color: transparent;
                                  -fx-focus-color: transparent;">
                    <columns>
                        <TableColumn fx:id="draftIdCol" text="Draft ID" prefWidth="100"/>
                        <TableColumn fx:id="custNameCol" text="Customer Name" prefWidth="150"/>
                        <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150"/>
                        <TableColumn fx:id="prodIdCol" text="Product ID" prefWidth="100"/>
                        <TableColumn fx:id="qtyCol" text="Quantity" prefWidth="100"/>
                        <TableColumn fx:id="confirmCol" text="Confirm" prefWidth="80"/>
                        <TableColumn fx:id="deleteCol" text="Delete" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Bottom Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button onAction="#handleViewDrafts" text="View Drafts"
                        style="-fx-font-size: 14px;
                               -fx-padding: 10 20;
                               -fx-background-color: linear-gradient(to right, #00ffbb, #00cc99);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
                <Button onAction="#handleBack" text="🔙 Back to Control Panel"
                        style="-fx-font-size: 14px;
                               -fx-padding: 10 20;
                               -fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </VBox>
</StackPane>
