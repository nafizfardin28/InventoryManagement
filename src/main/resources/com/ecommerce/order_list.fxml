<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #fdfbfb, #ebedee); -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controller.OrderListController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ“¦ Order List" />

    <TableView fx:id="orderTable" prefHeight="300" prefWidth="900" style="-fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 2, 2);">
        <columns>
            <TableColumn fx:id="orderIdColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Order ID" />
            <TableColumn fx:id="customerNameColumn" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" text="Customer" />
            <TableColumn fx:id="phoneColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Phone Number" />
            <TableColumn fx:id="productIdColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Product ID" />
            <TableColumn fx:id="productNameColumn" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" text="Product Name" />
            <TableColumn fx:id="QuantityColumn" prefWidth="70" style="-fx-alignment: CENTER;" text="Quantity" />
            <TableColumn fx:id="totalBillColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Total Bill" />
            <TableColumn fx:id="orderDateColumn" prefWidth="180" style="-fx-alignment: CENTER;" text="Order Date" />
        </columns>
    </TableView>

    <!-- Buttons HBox -->
    <HBox prefWidth="900" spacing="10">
        <!-- Left button: Customer Order Report -->
        <Button onAction="#handleCustomerReport" prefHeight="40" prefWidth="180" style="-fx-font-size: 14px; -fx-background-color: #bf00ff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Generate Customer Order Report" />

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Right button: Total Order Report -->
        <Button onAction="#handleTotalReport" prefHeight="40" prefWidth="180" style="-fx-font-size: 14px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Generate Total Order Report" />
    </HBox>
    <HBox alignment="CENTER">
        <Button onAction="#handleBack" prefHeight="40" prefWidth="159.0" style="-fx-font-size: 14px;-fx-background-color: #bf00ff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Back to Control Panel" />
    </HBox>

</VBox>
