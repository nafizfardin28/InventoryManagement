<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ecommerce.controller.OrderListController"
           style="-fx-background-color: linear-gradient(to bottom, #eef2f3, #ffffff);">

    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">

        <!-- Card Container -->
        <VBox spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-padding: 30 40;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 8);">

            <!-- Title -->
            <Label text="ðŸ“¦ Order List"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Table -->
            <TableView fx:id="orderTable" prefHeight="350" prefWidth="900"
                       style="-fx-background-radius: 12;
                              -fx-border-radius: 12;
                              -fx-border-color: #d0d7de;
                              -fx-focus-color: transparent;
                              -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="orderIdColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Order ID" />
                    <TableColumn fx:id="customerNameColumn" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" text="Customer" />
                    <TableColumn fx:id="phoneColumn" prefWidth="150" style="-fx-alignment: CENTER;" text="Phone Number" />
                    <TableColumn fx:id="productIdColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Product ID" />
                    <TableColumn fx:id="productNameColumn" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" text="Product Name" />
                    <TableColumn fx:id="QuantityColumn" prefWidth="70" style="-fx-alignment: CENTER;" text="Quantity" />
                    <TableColumn fx:id="totalBillColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Total Bill" />
                    <TableColumn fx:id="orderDateColumn" prefWidth="180" style="-fx-alignment: CENTER;" text="Order Date" />
                </columns>
            </TableView>

            <!-- Buttons HBox -->
            <HBox prefWidth="900" spacing="15">
                <Button onAction="#handleCustomerReport" prefHeight="40" prefWidth="200"
                        text="Generate Customer Order Report"
                        style="-fx-font-size: 14px;
                               -fx-background-color: linear-gradient(to right, #bf00ff, #9b00cc);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleTotalReport" prefHeight="40" prefWidth="200"
                        text="Generate Total Order Report"
                        style="-fx-font-size: 14px;
                               -fx-background-color: linear-gradient(to right, #007bff, #0056b3);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
            </HBox>

            <!-- Back Button -->
            <HBox alignment="CENTER">
                <Button onAction="#handleBack" prefHeight="40" prefWidth="180"
                        text="Back to Control Panel"
                        style="-fx-font-size: 14px;
                               -fx-background-color: linear-gradient(to right, #00bbff, #0099cc);
                               -fx-text-fill: white;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </VBox>
</StackPane>
