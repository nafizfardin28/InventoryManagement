<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecommerce.controller.OrderListController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #fdfbfb, #ebedee); -fx-padding: 30;">

    <Label text="ðŸ“¦ Order List"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TableView fx:id="orderTable" prefWidth="900" prefHeight="300"
               style="-fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 2, 2);">
        <columns>
            <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="150" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="customerNameColumn" text="Customer" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" />
            <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="150" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="150" style="-fx-alignment: CENTER-LEFT;" />
            <TableColumn fx:id="QuantityColumn" text="Quantity" prefWidth="70" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="totalBillColumn" text="Total Bill" prefWidth="100" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="orderDateColumn" text="Order Date" prefWidth="180" style="-fx-alignment: CENTER;" />
        </columns>
    </TableView>

    <!-- Buttons HBox -->
    <HBox prefWidth="900" spacing="10">
        <!-- Left button: Customer Order Report -->
        <Button onAction="#handleCustomerReport" prefHeight="40" prefWidth="180" style="-fx-font-size: 14px; -fx-background-color: #bf00ff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Generate Customer Order Report" />

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Right button: Total Order Report -->
        <Button onAction="#handleTotalReport" prefHeight="40" prefWidth="180" style="-fx-font-size: 14px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Generate Total Order Report" />
    </HBox>
    <HBox alignment="CENTER">
        <Button onAction="#handleBack" prefHeight="40" prefWidth="159.0" style="-fx-font-size: 14px;-fx-background-color: #bf00ff; -fx-text-fill: white; -fx-background-radius: 8px;" text="Back to Control Panel" />
    </HBox>

</VBox>
