<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controller.AddProductController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Add Product" />

    <GridPane hgap="15" vgap="12">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120" />
            <ColumnConstraints minWidth="250" />
        </columnConstraints>

        <Label style="-fx-font-weight: semi-bold; -fx-text-fill: #555;" text="Product ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="idField" promptText="Product ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-weight: semi-bold; -fx-text-fill: #555;" text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" promptText="Product Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: semi-bold; -fx-text-fill: #555;" text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="priceField" promptText="Price" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label style="-fx-font-weight: semi-bold; -fx-text-fill: #555;" text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="availablePiecesField" promptText="Enter quantity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleAddProduct" style="-fx-background-color: #b94d4d; -fx-text-fill: white; -fx-font-family: 'JetBrains Mono SemiBold Italic'; -fx-font-size: 13px; -fx-padding: 8 20; -fx-background-radius: 6;" text="Add Product">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
        <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #b94d4d; -fx-border-color: #b94d4d; -fx-border-radius: 6; -fx-padding: 8 20;" text="Back to Control Panel" />
    </HBox>

    <Label fx:id="errorLabel" style="-fx-font-weight: bold;" textFill="RED" />
</VBox>
